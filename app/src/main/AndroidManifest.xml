<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.quiz">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quiz">
        <activity android:name=".activities.quizzes.QuestionBankActivity" />
        <activity android:name=".activities.quizzes.DoExamAcitivity" android:exported="false" />
        <activity android:name=".activities.quizzes.ExamAddActivity" />
        <activity android:name=".activities.quizzes.QuizActivity"/>
        <activity android:name=".activities.subjects.SubjectActivity"/>
        <activity android:name=".activities.chapters.ChapterActivity" />
        <activity android:name=".activities.CategoryActivity" />
        <activity android:name=".activities.student.HomeScreen"/>
        <activity android:name=".activities.student.DisplayChapter"/>
        <activity android:name=".activities.student.DisplayQuiz"/>
        <activity android:name=".activities.student.ShowExam.ShowExam"/>
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name=".data.QuizProvider"
            android:authorities="com.example.android.quiz"
            android:exported="false" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>